<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="repeid-defaultJpa"
		transaction-type="RESOURCE_LOCAL">
		<class>org.repeid.manager.api.jpa.entities.PersonaEntity</class>
		<class>org.repeid.manager.api.jpa.entities.PersonaNaturalEntity</class>
		<class>org.repeid.manager.api.jpa.entities.PersonaJuridicaEntity</class>
		<class>org.repeid.manager.api.jpa.entities.AccionistaEntity</class>
		<class>org.repeid.manager.api.jpa.entities.TipoDocumentoEntity</class>
		<!-- File storage -->
		<class>org.repeid.manager.api.jpa.entities.FileEntity</class>
		<class>org.repeid.manager.api.jpa.entities.StoredFileEntity</class>
		<class>org.repeid.manager.api.jpa.entities.StoreConfigurationEntity</class>
		<!-- Security -->
		<class>org.repeid.manager.api.jpa.entities.security.RoleEntity</class>
		<class>org.repeid.manager.api.jpa.entities.security.UserEntity</class>
		<class>org.repeid.manager.api.jpa.entities.security.RoleMembershipEntity</class>

		<exclude-unlisted-classes>true</exclude-unlisted-classes>

		<properties>
			<!-- Properties for Hibernate -->
			<property name="jboss.as.jpa.managed" value="false" />
			<property name="hibernate.id.new_generator_mappings" value="true" />
		</properties>
	</persistence-unit>

	<persistence-unit name="repeid-defaultMongo"
		transaction-type="RESOURCE_LOCAL">
		<class>org.repeid.manager.api.mongo.entities.MongoPersonaEntity</class>
		<class>org.repeid.manager.api.mongo.entities.MongoPersonaNaturalEntity</class>
		<class>org.repeid.manager.api.mongo.entities.MongoPersonaJuridicaEntity</class>
		<class>org.repeid.manager.api.mongo.entities.MongoAccionistaEntity</class>
		<class>org.repeid.manager.api.mongo.entities.MongoTipoDocumentoEntity</class>
		<!-- File storage -->
		<class>org.repeid.manager.api.mongo.entities.MongoFileEntity</class>
		<class>org.repeid.manager.api.mongo.entities.MongoStoredFileEntity</class>
		<class>org.repeid.manager.api.mongo.entities.MongoStoreConfigurationEntity</class>
		<!-- Security -->
		<class>org.repeid.manager.api.mongo.entities.security.MongoRoleEntity</class>
		<class>org.repeid.manager.api.mongo.entities.security.MongoUserEntity</class>
		<class>org.repeid.manager.api.mongo.entities.security.MongoRoleMembershipEntity</class>

		<exclude-unlisted-classes>true</exclude-unlisted-classes>

		<properties>
			<!-- Properties for Hibernate -->
			<property name="jboss.as.jpa.managed" value="false" />
			<property name="hibernate.id.new_generator_mappings" value="true" />
		</properties>
	</persistence-unit>

</persistence>