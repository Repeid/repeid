<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="repeid-default" transaction-type="RESOURCE_LOCAL">
		<class>org.repeid.manager.api.models.jpa.entities.PersonaEntity</class>
		<class>org.repeid.manager.api.models.jpa.entities.PersonaNaturalEntity</class>
		<class>org.repeid.manager.api.models.jpa.entities.PersonaJuridicaEntity</class>
		<class>org.repeid.manager.api.models.jpa.entities.TipoDocumentoEntity</class>

		<!-- JpaAuditProviders -->
		<class>org.repeid.manager.api.events.jpa.EventEntity</class>
		<class>org.repeid.manager.api.events.jpa.AdminEventEntity</class>

		<exclude-unlisted-classes>true</exclude-unlisted-classes>

		<properties>
			<!-- Properties for Hibernate -->
			<property name="jboss.as.jpa.managed" value="false" />
			<property name="hibernate.id.new_generator_mappings" value="true" />
		</properties>

	</persistence-unit>
</persistence>